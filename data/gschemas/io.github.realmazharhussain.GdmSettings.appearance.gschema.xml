<schemalist gettext-domain="gdm-settings">
  <schema id="io.github.realmazharhussain.GdmSettings.appearance"
       path="/io/github/realmazharhussain/GdmSettings/appearance/">

	 <key name="accent-color" type="s">
	   <default>"blue"</default>
	   <choices>
	     <choice value="blue"/>
	     <choice value="teal"/>
	     <choice value="green"/>
	     <choice value="yellow"/>
	     <choice value="orange"/>
	     <choice value="red"/>
	     <choice value="pink"/>
	     <choice value="purple"/>
	     <choice value="slate"/>
	   </choices>
	 </key>

	 <key name="shell-theme" type="s">
	   <default>"default"</default>
	   <summary>Theme Name</summary>
	 </key>

    <key name="icon-theme" type="s">
      <default>"Adwaita"</default>
    </key>

    <key name="cursor-theme" type="s">
      <default>"Adwaita"</default>
    </key>

	 <key name="background-type" type="s">
	   <default>"default"</default>
	   <summary>Type of Background</summary>
      <!-- Translators: GDM is an acronym for GNOME Display Manager (which is also GNOME's Login Manager). -->
	   <description>
	     Whether GDM background should be an Image, Color or Default.
	   </description>
	   <choices>
	     <choice value="default"/>
	     <choice value="image"/>
	     <choice value="color"/>
	   </choices>
	 </key>

	 <key name="background-image" type="s">
	   <default>""</default>
	   <summary>Background Image</summary>
      <!-- Translators: GDM is an acronym for GNOME Display Manager (which is also GNOME's Login Manager). -->
	   <description>
	     The image file to use as GDM background
	   </description>
	 </key>

	 <key name="bg-adjustment" type="s">
	   <default>"zoom"</default>
	   <summary>Background Image Adjustment</summary>
	   <description>
	     Strategy for adjustment of background image.
	   </description>
	   <choices>
	     <choice value="zoom"/>
	     <choice value="repeat"/>
	   </choices>
	 </key>

	 <key name="background-color" type="s">
	   <default>"rgb(40,40,40)"</default>
	   <summary>Background Color</summary>
      <!-- Translators: GDM is an acronym for GNOME Display Manager (which is also GNOME's Login Manager). -->
	   <description>
	     The Color to use as GDM background
	   </description>
	 </key>

  </schema>
</schemalist>
