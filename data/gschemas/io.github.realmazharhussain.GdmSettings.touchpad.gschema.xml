<schemalist gettext-domain="gdm-settings">
  <schema id="io.github.realmazharhussain.GdmSettings.touchpad"
       path="/io/github/realmazharhussain/GdmSettings/touchpad/">

    <key name="send-events" type="b">
      <default>true</default>
    </key>

    <key name="disabled-on-external-mouse" type="b">
      <default>false</default>
    </key>

    <key name="disable-while-typing" type="b">
      <default>true</default>
    </key>

    <key name="tap-to-click" type="b">
      <default>true</default>
    </key>

    <key name="natural-scrolling" type="b">
      <default>true</default>
    </key>

    <key name="two-finger-scrolling" type="b">
      <default>true</default>
    </key>

    <key name="speed" type="d">
      <default>0.35</default>
      <summary>Pointer speed</summary>
      <description>Pointer speed for the touchpad. Accepted values are in the [-1..1] range (from “unaccelerated” to “fast”). A value of 0 is the system default.</description>
      <range min="-1" max="1"/>
    </key>

  </schema>
</schemalist>
